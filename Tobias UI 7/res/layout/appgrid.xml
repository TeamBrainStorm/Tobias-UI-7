<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/row" android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent">
        <ImageView android:maxHeight="50dip" android:id="@+id/appIcon" android:adjustViewBounds="true" android:src="@drawable/icon" android:maxWidth="50dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"></ImageView>
        <TextView android:id="@+id/appName" android:layout_marginRight="5dp" android:layout_width="match_parent" android:layout_gravity="center_horizontal" android:text="Application's name" android:layout_marginLeft="5dp" android:layout_height="wrap_content" android:gravity="center_horizontal" android:maxLines="2" android:lines="2"></TextView>
    
    
</LinearLayout>
